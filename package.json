    "@types/node": "^22.13.10",
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.40.0",
    "ioredis": "^5.5.0",
    "pg": "^8.13.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
