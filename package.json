{
  "name": "glim-node",
  "version": "0.0.0",
  "type": "module",
  "files": ["dist"],
  "bin": {
    "gn": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
