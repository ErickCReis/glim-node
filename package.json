{
  "name": "glim-node",
  "version": "0.0.12",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ErickCReis/glim-node.git"
  },
  "type": "module",
  "files": [
    "dist",
    "dist/templates/**/*"
  ],
  "bin": {
    "gn": "./dist/bin.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "default": "./dist/server.js"
    },
    "./helpers": {
      "types": "./dist/helpers.d.ts",
      "default": "./dist/helpers.js"
    },
    "./middleware": {
      "types": "./dist/middleware.d.ts",
      "default": "./dist/middleware.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "check": "biome check --write . && tsc --noEmit",
    "dev": "tsup --watch",
    "release": "dotenv pnpm publish"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.0",
    "hono": "^4.7.5",
    "pino": "^9.6.0"
  },
  "peerDependencies": {
    "@aws-sdk/client-s3": ">=3",
    "@aws-sdk/client-sns": ">=3",
    "@types/pg": ">=8.11",
    "dotenv": ">=16",
    "drizzle-orm": ">=0.40",
    "ioredis": ">=5.5",
    "pg": ">=8.13",
    "zod": ">=3.24"
  },
  "peerDependenciesMeta": {
    "@aws-sdk/client-s3": {
      "optional": true
    },
    "@aws-sdk/client-sns": {
      "optional": true
    },
    "@types/pg": {
      "optional": true
    },
    "drizzle-orm": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "pg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.775.0",
    "@aws-sdk/client-sns": "^3.775.0",
    "@biomejs/biome": "1.9.4",
    "@clack/prompts": "^0.10.0",
    "@types/node": "^22.13.13",
    "@types/pg": "^8.11.11",
    "dotenv": "^16.4.7",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.5",
    "drizzle-orm": "^0.41.0",
    "ioredis": "^5.5.0",
    "pg": "^8.14.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "yaml": "^2.7.0",
    "zod": "^3.24.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  }
}
